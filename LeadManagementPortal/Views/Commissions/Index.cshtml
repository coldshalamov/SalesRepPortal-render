@model LeadManagementPortal.Models.ViewModels.CommissionDashboardViewModel

@{
    ViewData["Title"] = "Commission Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">My Earnings & Commissions</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
            <button type="button" class="btn btn-sm btn-outline-secondary">Export</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
            <span data-feather="calendar"></span>
            This Month
        </button>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total Earned (YTD)</div>
            <div class="card-body">
                <h2 class="card-title">@Model.TotalCommissionEarned.ToString("C")</h2>
                <p class="card-text">Great job! You are on track.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-dark bg-light mb-3">
            <div class="card-header">This Month</div>
            <div class="card-body">
                <h2 class="card-title">@Model.CurrentMonthCommission.ToString("C")</h2>
                <p class="card-text">From 4 deals closed.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Pending Payouts</div>
            <div class="card-body">
                <h2 class="card-title">@Model.PendingPayouts.ToString("C")</h2>
                <p class="card-text">Expected by end of month.</p>
            </div>
        </div>
    </div>
</div>

<!-- Deals Table -->
<h3>Recent Deals</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Customer</th>
                <th scope="col">Product</th>
                <th scope="col" class="text-end">Sale Amount</th>
                <th scope="col" class="text-end">Commission (10%)</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deal in Model.RecentDeals)
            {
                <tr>
                    <td>@deal.Date.ToShortDateString()</td>
                    <td>@deal.CustomerName</td>
                    <td>@deal.Product</td>
                    <td class="text-end">@deal.SaleAmount.ToString("C")</td>
                    <td class="text-end fw-bold text-success">@deal.CommissionAmount.ToString("C")</td>
                    <td>
                        @if(deal.Status == "Paid")
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="alert alert-info mt-4">
    <i class="bi bi-info-circle"></i> <strong>Note:</strong> Data is currently simulated for demonstration. 
    Real-time integration with DispensePro/Finance is pending configuration.
</div>
