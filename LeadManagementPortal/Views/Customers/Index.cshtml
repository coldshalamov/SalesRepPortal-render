@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="row mb-4">
    <div class="col">
        <h2><i class="bi bi-person-check"></i> Customers</h2>
        <p class="text-muted">Converted leads</p>
    </div>
</div>

<!-- Search -->
<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search..." />
            </div>

            @if (ViewBag.SalesGroups != null)
            {
                <div class="col-md-2">
                    <select name="salesGroupId" class="form-select" asp-items="ViewBag.SalesGroups">
                        <option value="">All Groups</option>
                    </select>
                </div>
            }

            @if (ViewBag.SalesOrgs != null)
            {
                <div class="col-md-2">
                    <select name="salesOrgId" class="form-select" asp-items="ViewBag.SalesOrgs">
                        <option value="">All Orgs</option>
                    </select>
                </div>
            }

            @if (ViewBag.SalesReps != null)
            {
                <div class="col-md-2">
                    <select name="salesRepId" class="form-select" asp-items="ViewBag.SalesReps">
                        <option value="">All Reps</option>
                    </select>
                </div>
            }

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
            <div class="col-md-1">
                <a asp-action="Index" class="btn btn-outline-secondary w-100" title="Clear">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Customers Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Company</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Sales Rep</th>
                        <th>Converted By</th>
                        <th>Sales Group</th>
                        <th>Conversion Date</th>
                        <th>Days to Convert</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@customer.Company</td>
                                <td>
                                    @customer.FirstName @customer.LastName
                                </td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope"></i> @customer.Email<br />
                                        <i class="bi bi-telephone"></i> @customer.Phone
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @if (customer.SalesRep != null)
                                        {
                                            @(string.IsNullOrWhiteSpace(customer.SalesRep.FullName) ? customer.SalesRep.Email : customer.SalesRep.FullName)
                                            if (!string.IsNullOrWhiteSpace(customer.SalesRep.Email))
                                            {
                                                <text><br /><span class="text-muted">@customer.SalesRep.Email</span></text>
                                            }
                                        }
                                        else { @("-") }
                                    </small>
                                </td>
                                <td>
                                    <small>@customer.ConvertedBy?.FirstName @customer.ConvertedBy?.LastName</small>
                                </td>
                                <td>@customer.SalesGroup?.Name</td>
                                <td>@customer.ConversionDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@customer.DaysToConvert days</span>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        @if (User.IsInRole("OrganizationAdmin"))
                                        {
                                            <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this customer? The original lead will be marked Lost.');" class="d-inline">
                                                <input type="hidden" name="id" value="@customer.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">
                                No customers found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
