@using LeadManagementPortal.Services
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard";
    var stats = ViewBag.Stats as DashboardStats;
    var recentLeads = ViewBag.RecentLeads as IEnumerable<Lead>;
}

@functions {
    string GetStatusBadgeClasses(Lead lead)
    {
        if (lead.IsExpired)
            return "bg-danger";

        switch (lead.Status)
        {
            case LeadStatus.New:
                return "bg-primary";
            case LeadStatus.Contacted:
                return "bg-info text-dark";
            case LeadStatus.Qualified:
                return "bg-info text-dark";
            case LeadStatus.Proposal:
                return "bg-warning text-dark";
            case LeadStatus.Negotiation:
                return "bg-warning text-dark";
            case LeadStatus.Converted:
                return "bg-success";
            case LeadStatus.Lost:
                return "bg-secondary";
            case LeadStatus.Expired:
                return "bg-danger";
            default:
                return "bg-secondary";
        }
    }
}

@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
<div class="row mb-4">
    <div class="col">
        <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
        <p class="text-muted">Welcome back, @((await UserManager.GetUserAsync(User)) is ApplicationUser u ? (string.IsNullOrWhiteSpace(u.FullName) ? User.Identity?.Name : u.FullName) : User.Identity?.Name)</p>
    </div>
    <div class="col-auto">
        <a asp-controller="Leads" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Lead
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Leads</h6>
                        <h2 class="mb-0">@stats?.TotalLeads</h2>
                    </div>
                    <div class="bg-light p-3 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <path d="M9 3a4 4 0 1 0 0 8 4 4 0 0 0 0-8z"></path>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Pending Leads</h6>
                        <h2 class="mb-0">@stats?.PendingLeads</h2>
                    </div>
                    <div class="bg-light p-3 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary"><path d="M5 22h14"/><path d="M5 2h14"/><path d="M17 22v-4.172a2 2 0 0 0-.586-1.414L12 12l-4.414 4.414A2 2 0 0 0 7 17.828V22"/><path d="M7 2v4.172a2 2 0 0 0 .586 1.414L12 12l4.414-4.414A2 2 0 0 0 17 6.172V2"/></svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h6 class="text-muted mb-1">Converted</h6>
                        <h2 class="mb-0">@stats?.ConvertedLeads</h2>
                    </div>
                    <div class="bg-light p-3 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                    </div>
                </div>
                <small class="text-muted">@stats?.ConversionRate% conversion rate</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Customers</h6>
                        <h2 class="mb-0">@stats?.TotalCustomers</h2>
                    </div>
                    <div class="bg-light p-3 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><polyline points="16 11 18 13 22 9"/></svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Priority Alerts -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title text-danger">
                    <i class="bi bi-exclamation-triangle"></i> Critical Leads
                </h5>
                <h2>@stats?.CriticalLeads</h2>
                <p class="mb-0 text-muted">Expiring within 7 days</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-warning h-100">
            <div class="card-body">
                <h5 class="card-title text-warning">
                    <i class="bi bi-exclamation-circle"></i> High Priority
                </h5>
                <h2>@stats?.HighPriorityLeads</h2>
                <p class="mb-0 text-muted">Expiring within 30 days</p>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-3 mb-4">
    <div class="col-md-5">
        <div class="card h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="bi bi-pie-chart"></i> Lead Urgency Breakdown</h6>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center">
                <div id="urgencyDonutChart"></div>
            </div>
        </div>
    </div>
    <div class="col-md-7">
        <div class="card h-100">
            <div class="card-header bg-white">
                <h6 class="mb-0"><i class="bi bi-bar-chart-line"></i> Conversions &ndash; Last 30 Days</h6>
            </div>
            <div class="card-body">
                <div id="conversionBarChart"></div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Leads -->
<div class="card">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Leads</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Days Left</th>
                        <th>Urgency</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (recentLeads != null && recentLeads.Any())
                    {
                        @foreach (var lead in recentLeads)
                        {
                            <tr>
                                <td>
                                    <strong>@lead.FirstName @lead.LastName</strong><br />
                                    <small class="text-muted">@lead.Company</small>
                                </td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope"></i> @lead.Email<br />
                                        <i class="bi bi-telephone"></i> @lead.Phone
                                    </small>
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClasses(lead)">
                                        @lead.Status
                                    </span>
                                </td>
                                <td>
                                    @if (lead.Status != LeadStatus.Converted && !lead.IsExpired)
                                    {
                                        <text><strong>@lead.DaysRemaining</strong> days</text>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (lead.UrgencyLevel == "Critical")
                                    {
                                        <span class="badge bg-danger">Critical</span>
                                    }
                                    else if (lead.UrgencyLevel == "High")
                                    {
                                        <span class="badge bg-warning text-dark">High</span>
                                    }
                                    else if (lead.UrgencyLevel == "Low")
                                    {
                                        <span class="badge bg-info">Low</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@lead.UrgencyLevel</span>
                                    }
                                </td>
                                <td>
                                    <a asp-controller="Leads" asp-action="Details" asp-route-id="@lead.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No leads found. <a asp-controller="Leads" asp-action="Create">Create your first lead</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (recentLeads != null && recentLeads.Any())
    {
        <div class="card-footer bg-white">
            <a asp-controller="Leads" asp-action="Index" class="btn btn-sm btn-link">
                View All Leads <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    }
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/apexcharts@3"></script>
<script>
(function () {
    // Urgency donut chart
    var urgencyOptions = {
        series: [@(stats?.CriticalLeads ?? 0), @(stats?.HighPriorityLeads ?? 0), @(stats?.LowPriorityLeads ?? 0)],
        labels: ['Critical', 'High', 'Low'],
        colors: ['#dc3545', '#ffc107', '#0dcaf0'],
        chart: { type: 'donut', height: 260 },
        legend: { position: 'bottom' },
        plotOptions: { pie: { donut: { size: '60%' } } },
        dataLabels: { enabled: true }
    };
    new ApexCharts(document.querySelector('#urgencyDonutChart'), urgencyOptions).render();

    // Conversion trend bar chart
    var trendPoints = @(Html.Raw(JsonSerializer.Serialize((stats?.ConversionTrend ?? new List<LeadManagementPortal.Services.ConversionDataPoint>()).Select(p => new { p.Label, p.Count }))));
    var trendLabels = trendPoints.map(function (p) { return p.label; });
    var trendData = trendPoints.map(function (p) { return p.count; });
    var barOptions = {
        series: [{ name: 'Conversions', data: trendData }],
        chart: { type: 'bar', height: 240, toolbar: { show: false } },
        xaxis: { categories: trendLabels, labels: { rotate: -45 } },
        colors: ['#198754'],
        plotOptions: { bar: { borderRadius: 4 } },
        dataLabels: { enabled: false },
        noData: { text: 'No conversions in the last 30 days' }
    };
    new ApexCharts(document.querySelector('#conversionBarChart'), barOptions).render();
}());
</script>
}

