@model IEnumerable<LeadManagementPortal.Models.CustomerAudit>
@{
    ViewData["Title"] = "Customer Activity";
}
<div class="container mt-4">
    <h2><i class="bi bi-activity"></i> Customer Activity</h2>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <input type="text" name="term" class="form-control" placeholder="Filter by term" />
        </div>
        <div class="col-md-2">
            <select name="action" class="form-select">
                <option value="">All Actions</option>
                <option value="Search">Search</option>
                <option value="DuplicateAttempt">DuplicateAttempt</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="from" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="to" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-filter"></i> Apply</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Time (UTC)</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Term</th>
                    <th>CustomerId</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.OccurredAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@a.UserEmail (@a.UserId)</td>
                        <td>@a.Action</td>
                        <td>@a.Term</td>
                        <td>@a.TargetCustomerId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
