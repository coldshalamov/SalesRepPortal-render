@model IEnumerable<LeadManagementPortal.Models.LeadAudit>
@{
    ViewData["Title"] = "Lead Activity";
}
<div class="container mt-4">
    <h2><i class="bi bi-activity"></i> Lead Activity</h2>
    <form method="get" class="row g-2 mb-3">
        <div class="col-md-3">
            <input type="text" name="leadId" class="form-control" placeholder="Filter by Lead Id" />
        </div>
        <div class="col-md-3">
            <input type="text" name="userId" class="form-control" placeholder="Filter by User Id" />
        </div>
        <div class="col-md-2">
            <select name="action" class="form-select">
                <option value="">All Actions</option>
                <option value="Create">Create</option>
                <option value="Update">Update</option>
                <option value="Reassign">Reassign</option>
                <option value="Convert">Convert</option>
                <option value="GrantExtension">GrantExtension</option>
                <option value="Expire">Expire</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="from" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="date" name="to" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100"><i class="bi bi-filter"></i> Apply</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Time (UTC)</th>
                    <th>Lead</th>
                    <th>User</th>
                    <th>Action</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.OccurredAtUtc.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@a.LeadId</td>
                        <td>@a.UserEmail (@a.UserId)</td>
                        <td>@a.Action</td>
                        <td>@a.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
