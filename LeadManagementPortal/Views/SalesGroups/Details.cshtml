@model SalesGroup
@{
    ViewData["Title"] = "Sales Group Details";
    var members = ViewBag.Members as IEnumerable<ApplicationUser>;
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-diagram-3"></i> Sales Group Details</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Group Information -->
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Group Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Group Name:</strong>
                        <p>@Model.Name</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p>
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <strong>Description:</strong>
                        <p>@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</p>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-12">
                        <strong>Group Logo:</strong>
                        <div class="d-flex align-items-center mt-2">
                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <img src="@Model.LogoUrl" alt="Group Logo" class="img-thumbnail me-3" style="max-height: 100px;" />
                            }
                            else
                            {
                                <span class="text-muted me-3">No logo uploaded</span>
                            }
                            
                            <form asp-action="UploadLogo" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data" class="d-flex align-items-center">
                                <div class="input-group">
                                    <input type="file" name="logo" class="form-control" accept=".png,.jpg,.jpeg,.svg" required />
                                    <button type="submit" class="btn btn-outline-primary">Upload</button>
                                </div>
                            </form>
                        </div>
                        <small class="text-muted d-block mt-1">Allowed formats: PNG, JPG, JPEG, SVG</small>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-6">
                        <strong>Group Admins:</strong>
                        @if (ViewBag.Admins != null && ((IEnumerable<LeadManagementPortal.Models.ApplicationUser>)ViewBag.Admins).Any())
                        {
                            <ul class="list-unstyled mb-0">
                                @foreach (var admin in (IEnumerable<LeadManagementPortal.Models.ApplicationUser>)ViewBag.Admins)
                                {
                                    <li>
                                        @admin.FirstName @admin.LastName
                                        <br />
                                        <small class="text-muted">@admin.Email</small>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No admins found</p>
                        }
                    </div>
                    <div class="col-md-6">
                        <strong>Created:</strong>
                        <p>@Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Group Members -->
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-people"></i> Group Members</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (members != null && members.Any())
                            {
                                @foreach (var member in members)
                                {
                                    <tr>
                                        <td><strong>@member.FirstName @member.LastName</strong></td>
                                        <td>@member.Email</td>
                                        <td>
                                            @if (member.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">
                                        No members in this group yet.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Logo Upload -->
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-image"></i> Group Logo</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
                {
                    <div class="text-center mb-3">
                        <img src="@Model.LogoUrl" alt="Group Logo" style="max-height:80px; max-width:100%;" />
                    </div>
                }
                <form asp-action="UploadLogo" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-2">
                        <input type="file" name="logo" accept=".png,.jpg,.jpeg,.svg" class="form-control" />
                        <small class="text-muted">PNG, JPG, JPEG, or SVG. Replaces current logo.</small>
                    </div>
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-upload"></i> Upload Logo
                    </button>
                </form>
            </div>
        </div>
        <!-- Statistics -->
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Statistics</h5>
            </div>
            <div class="card-body">
                <p>
                    <strong>Total Members:</strong><br />
                    <span class="fs-4">@(members?.Count() ?? 0)</span>
                </p>
                <p>
                    <strong>Total Leads:</strong><br />
                    <span class="fs-4">@Model.Leads.Count</span>
                </p>
                <p>
                    <strong>Active Since:</strong><br />
                    @Model.CreatedDate.ToString("MMM dd, yyyy")
                </p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning"></i> Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100 mb-2">
                    <i class="bi bi-pencil"></i> Edit Group
                </a>
                <a asp-controller="Leads" asp-action="Index" class="btn btn-outline-primary w-100">
                    <i class="bi bi-eye"></i> View Group Leads
                </a>
            </div>
        </div>
    </div>
</div>
