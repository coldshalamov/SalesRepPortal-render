@model IReadOnlyList<LeadManagementPortal.Models.LeadDocument>
@{
    var leadId = (string)(ViewContext.RouteData.Values["id"] ?? Context.Request.Query["leadId"].ToString());
}
<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-paperclip"></i> Lead Documents</span>
    </div>
    <div class="card-body">
        <form asp-controller="LeadDocuments" asp-action="Upload" method="post" enctype="multipart/form-data" class="row g-2 mb-3">
            @Html.AntiForgeryToken()
            <input type="hidden" name="leadId" value="@leadId" />
            <div class="col-md-8">
                <input class="form-control" type="file" name="file" />
            </div>
            <div class="col-md-4 d-grid">
                <button type="submit" class="btn btn-primary"><i class="bi bi-upload"></i> Upload</button>
            </div>
        </form>

        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>File</th>
                            <th>Size</th>
                            <th>Uploaded</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.FileName</td>
                            <td>@(String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:N0}", d.SizeBytes)) bytes</td>
                            <td>@d.UploadedAtUtc.ToLocalTime().ToString("g")</td>
                            <td class="text-end">
                                <a asp-controller="LeadDocuments" asp-action="Download" asp-route-id="@d.Id" class="btn btn-outline-secondary btn-sm" target="_blank">
                                    <i class="bi bi-download"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-muted">No documents uploaded yet.</div>
        }
    </div>
</div>
