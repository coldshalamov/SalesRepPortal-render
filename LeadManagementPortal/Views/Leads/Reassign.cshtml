@model LeadManagementPortal.Controllers.LeadReassignViewModel
@{
    ViewData["Title"] = "Reassign Lead";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-arrow-left-right"></i> Reassign Lead</h2>
        <p class="text-muted">Select a new assignee for this lead.</p>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Back to Leads</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Reassign" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="LeadId" />

            <div class="mb-3">
                <label asp-for="NewAssigneeId" class="form-label">Assign To</label>
                <select asp-for="NewAssigneeId" class="form-select" asp-items="ViewBag.SalesReps"></select>
                <span asp-validation-for="NewAssigneeId" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-action="Details" asp-route-id="@Model.LeadId" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Reassign</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
