@using System.Text.Json
@model IEnumerable<Lead>
@{
    ViewData["Title"] = "Leads";
    var selectedStatuses = ViewBag.SelectedStatuses as List<LeadStatus> ?? new List<LeadStatus>();
    var canConvertInPipeline = User.IsInRole(UserRoles.OrganizationAdmin);
    var followUpLookup = ViewBag.FollowUpsByLead as Dictionary<string, List<LeadFollowUpTask>> ?? new Dictionary<string, List<LeadFollowUpTask>>();
    var overdueFollowUpCount = (int?)(ViewBag.OverdueFollowUpCount) ?? 0;

    var pipelineSeed = (Model ?? Enumerable.Empty<Lead>()).Select(lead => new
    {
        tasks = (followUpLookup.TryGetValue(lead.Id, out var tasks) ? tasks : new List<LeadFollowUpTask>())
            .Select(task => new
            {
                id = task.Id,
                type = task.Type,
                description = task.Description,
                dueDate = task.DueDate?.ToString("yyyy-MM-dd"),
                isCompleted = task.IsCompleted,
                completedAt = task.CompletedAt?.ToString("yyyy-MM-dd HH:mm:ss")
            }),
        id = lead.Id,
        company = lead.Company,
        firstName = lead.FirstName,
        lastName = lead.LastName,
        email = lead.Email,
        phone = lead.Phone,
        notes = lead.Notes,
        assignedRep = lead.AssignedTo?.FullName ?? lead.AssignedTo?.Email ?? "-",
        salesOrg = lead.AssignedTo?.SalesOrg?.Name ?? "-",
        status = lead.Status.ToString(),
        daysRemaining = (lead.Status == LeadStatus.Converted || lead.IsExpired) ? 0 : lead.DaysRemaining,
        urgency = lead.UrgencyLevel,
        isExpired = lead.IsExpired,
        detailsUrl = Url.Action("Details", "Leads", new { id = lead.Id }),
        editUrl = (lead.Status != LeadStatus.Converted) ? Url.Action("Edit", "Leads", new { id = lead.Id }) : null
    });
    var pipelineSeedJson = JsonSerializer.Serialize(pipelineSeed);
}

@functions {
    string GetStatusBadgeClasses(Lead lead)
    {
        if (lead.IsExpired)
        {
            return "bg-danger";
        }

        switch (lead.Status)
        {
            case LeadStatus.New:
                return "bg-primary";
            case LeadStatus.Contacted:
            case LeadStatus.Qualified:
                return "bg-info text-dark";
            case LeadStatus.Proposal:
            case LeadStatus.Negotiation:
                return "bg-warning text-dark";
            case LeadStatus.Converted:
                return "bg-success";
            case LeadStatus.Lost:
                return "bg-secondary";
            case LeadStatus.Expired:
                return "bg-danger";
            default:
                return "bg-secondary";
        }
    }
}

