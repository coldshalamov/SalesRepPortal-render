<!-- Search and Filter -->
<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search..." />
            </div>

            @if (ViewBag.SalesGroups != null)
            {
                <div class="col-md-2">
                    <select name="salesGroupId" class="form-select" asp-items="ViewBag.SalesGroups">
                        <option value="">All Groups</option>
                    </select>
                </div>
            }

            @if (ViewBag.SalesOrgs != null)
            {
                <div class="col-md-2">
                    <select name="salesOrgId" class="form-select" asp-items="ViewBag.SalesOrgs">
                        <option value="">All Orgs</option>
                    </select>
                </div>
            }

            @if (ViewBag.SalesReps != null)
            {
                <div class="col-md-2">
                    <select name="salesRepId" class="form-select" asp-items="ViewBag.SalesReps">
                        <option value="">All Reps</option>
                    </select>
                </div>
            }

            <div class="col-md-2">
                <select name="statuses" class="form-select" multiple size="1" aria-label="Select statuses" data-enhance="multiselect">
                    @foreach (LeadStatus status in Enum.GetValues(typeof(LeadStatus)))
                    {
                        <option value="@status" selected="@(selectedStatuses.Contains(status))">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100" title="Search">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

