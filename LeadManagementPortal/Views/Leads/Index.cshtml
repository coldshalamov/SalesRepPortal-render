        </div>
    </div>
</div>

<!-- Leads Table -->
<div class="card" id="leadsTableView">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Company</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Sales Rep</th>
                        <th>Sales Org</th>
                        <th>Status</th>
                        <th>Days Left</th>
                        <th>Urgency</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var lead in Model)
                        {
                            <tr class="@(lead.UrgencyLevel == "Critical" ? "table-danger" : lead.UrgencyLevel == "High" ? "table-danger" : lead.UrgencyLevel == "Medium" ? "table-warning" : "")">
                                <td><strong>@lead.Company</strong></td>
                                <td>@lead.FirstName @lead.LastName</td>
                                <td>
                                    <small>
                                        <i class="bi bi-envelope"></i> @lead.Email<br />
                                        <i class="bi bi-telephone"></i> @lead.Phone
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        @if (lead.AssignedTo != null)
                                        {
                                            if (!string.IsNullOrWhiteSpace(lead.AssignedTo.FullName))
                                            {
                                                @lead.AssignedTo.FullName
                                                if (!string.IsNullOrWhiteSpace(lead.AssignedTo.Email))
                                                {
                                                    <br />
                                                    <span class="text-muted">@lead.AssignedTo.Email</span>
                                                }
                                            }
                                            else
                                            {
                                                @lead.AssignedTo.Email
                                            }
                                        }
                                        else
                                        {
                                            @("-")
                                        }
                                    </small>
                                </td>
                                <td>@(lead.AssignedTo?.SalesOrg?.Name ?? "-")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClasses(lead)">@lead.Status</span>
                                </td>
                                <td>
                                    @if (lead.Status != LeadStatus.Converted && !lead.IsExpired)
                                    {
                                        <strong>@lead.DaysRemaining</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (lead.UrgencyLevel == "Critical" || lead.UrgencyLevel == "High")
                                    {
                                        <span class="badge bg-danger">@lead.UrgencyLevel</span>
                                    }
                                    else if (lead.UrgencyLevel == "Medium")
                                    {
                                        <span class="badge bg-warning text-dark">Medium</span>
                                    }
                                    else if (lead.UrgencyLevel == "Low")
                                    {
                                        <span class="badge bg-secondary">Low</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@lead.Id" class="btn btn-outline-primary" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (lead.Status != LeadStatus.Converted)
                                        {
                                            <a asp-action="Edit" asp-route-id="@lead.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted py-4">No leads found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="pipelineLeadModal" tabindex="-1" aria-labelledby="pipelineLeadModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pipelineLeadModalTitle">Lead Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Contact</div>
                        <div id="pipelineDetailName" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Company</div>
                        <div id="pipelineDetailCompany" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Email</div>
                        <div id="pipelineDetailEmail" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Phone</div>
                        <div id="pipelineDetailPhone" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Sales Rep</div>
                        <div id="pipelineDetailRep" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-md-6">
                        <div class="pipeline-detail-label">Sales Org</div>
                        <div id="pipelineDetailOrg" class="pipeline-detail-value"></div>
                    </div>
                    <div class="col-12">
                        <div class="pipeline-detail-label">Notes</div>
                        <div id="pipelineDetailNotes" class="pipeline-detail-value text-muted">-</div>
                    </div>
                </div>

                <h6 class="mb-2">Move Lead</h6>
                <div class="pipeline-stage-actions" id="pipelineStageButtons"></div>

                <hr class="my-4" />
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h6 class="mb-0">Follow-up Tasks</h6>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-sm btn-outline-danger d-none" id="pipelineDeleteTasksBtn">Delete Selected</button>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="pipelineAddTaskBtn">Add Task</button>
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mb-3">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-quick-task="call_tomorrow">Call Tomorrow</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-quick-task="send_proposal">Send Proposal</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-quick-task="schedule_demo">Schedule Demo</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-quick-task="check_in_week">Check-in +1 Week</button>
                </div>

                <div class="card d-none mb-3" id="pipelineTaskFormCard">
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <label for="pipelineTaskType" class="form-label mb-1">Type</label>
                                <select id="pipelineTaskType" class="form-select form-select-sm">
                                    <option value="call">Call</option>
                                    <option value="email">Email</option>
                                    <option value="meeting">Meeting</option>
                                    <option value="check-in">Check-in</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="pipelineTaskDueDate" class="form-label mb-1">Due Date</label>
                                <input id="pipelineTaskDueDate" type="date" class="form-control form-control-sm" />
                            </div>
                            <div class="col-md-12">
                                <label for="pipelineTaskDescription" class="form-label mb-1">Description</label>
                                <input id="pipelineTaskDescription" type="text" maxlength="500" class="form-control form-control-sm" placeholder="Actionable follow-up..." />
                            </div>
                            <div class="col-md-12 d-flex justify-content-end gap-2 mt-2">
                                <button type="button" class="btn btn-sm btn-light" id="pipelineTaskCancelBtn">Cancel</button>
                                <button type="button" class="btn btn-sm btn-primary" id="pipelineTaskSaveBtn">Save Task</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="pipelineTasksList"></div>
            </div>
            <div class="modal-footer">
                <a href="#" id="pipelineLeadDetailsLink" class="btn btn-outline-primary">Open Details</a>
                <a href="#" id="pipelineLeadEditLink" class="btn btn-outline-secondary">Open Edit</a>
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script id="leadsPipelineSeed" type="application/json">@Html.Raw(pipelineSeedJson)</script>
<script id="leadsPipelineConfig" type="application/json">
    @Html.Raw(JsonSerializer.Serialize(new
    {
        updateStatusUrl = Url.Action("UpdateStatus", "Leads"),
        addFollowUpUrl = Url.Action("AddFollowUp", "Leads"),
        completeFollowUpUrl = Url.Action("CompleteFollowUp", "Leads"),
        deleteFollowUpsUrl = Url.Action("DeleteFollowUps", "Leads"),
        overdueFollowUpCount = overdueFollowUpCount,
        canConvert = canConvertInPipeline
    }))
</script>

@section Scripts {
    <script src="~/js/leads-pipeline.js" asp-append-version="true"></script>
}
