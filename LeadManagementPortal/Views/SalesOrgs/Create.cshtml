@model LeadManagementPortal.Models.SalesOrg
@{
    ViewData["Title"] = "Create Sales Org";
}
<h2>Create Sales Org</h2>
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Sales Group</label>
        <select asp-for="SalesGroupId" class="form-control" asp-items="new SelectList((IEnumerable<LeadManagementPortal.Models.SalesGroup>)ViewBag.SalesGroups, nameof(LeadManagementPortal.Models.SalesGroup.Id), nameof(LeadManagementPortal.Models.SalesGroup.Name))">
            <option value="">-- Select a Sales Group --</option>
        </select>
        <span asp-validation-for="SalesGroupId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
