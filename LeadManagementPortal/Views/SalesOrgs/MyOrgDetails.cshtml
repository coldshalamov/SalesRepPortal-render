@model LeadManagementPortal.Models.SalesOrg
@{
    ViewData["Title"] = "My Organization";
}

<h2>My Organization</h2>

<div class="card mb-4">
    <div class="card-header">
        Organization Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Sales Group</dt>
            <dd class="col-sm-10">@Model.SalesGroup?.Name</dd>
            <dt class="col-sm-2">Current Logo</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
                {
                    <img src="@Model.LogoUrl" alt="Org Logo" style="max-height:80px; max-width:100%;" />
                }
                else
                {
                    <span class="text-muted">No logo uploaded</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="card">
    <div class="card-header">
        Update Logo
    </div>
    <div class="card-body">
        <form asp-action="UploadLogo" method="post" enctype="multipart/form-data">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="source" value="MyOrgDetails" />
            <div class="mb-3">
                <label for="logo" class="form-label">Select Logo Image</label>
                <input type="file" class="form-control" id="logo" name="logo" accept="image/*" required>
            </div>
            <button type="submit" class="btn btn-primary">Upload Logo</button>
        </form>
    </div>
</div>
