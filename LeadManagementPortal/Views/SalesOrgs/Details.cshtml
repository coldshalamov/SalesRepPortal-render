@model LeadManagementPortal.Models.SalesOrg
@{
    ViewData["Title"] = "Sales Org Details";
}
<h2>Sales Org Details</h2>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Sales Group</dt>
    <dd class="col-sm-10">@Model.SalesGroup?.Name</dd>
    <dt class="col-sm-2">Logo</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
        {
            <img src="@Model.LogoUrl" alt="Org Logo" style="max-height:80px; max-width:100%;" />
        }
        else
        {
            <span class="text-muted">No logo uploaded</span>
        }
    </dd>
    <dt class="col-sm-2">Org Admins</dt>
    <dd class="col-sm-10">
        @if (ViewBag.Admins != null && ((IEnumerable<LeadManagementPortal.Models.ApplicationUser>)ViewBag.Admins).Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var admin in (IEnumerable<LeadManagementPortal.Models.ApplicationUser>)ViewBag.Admins)
                {
                    <li>
                        @admin.FirstName @admin.LastName
                        <br />
                        <small class="text-muted">@admin.Email</small>
                    </li>
                }
            </ul>
        }
        else
        {
            <span class="text-muted">No admins found</span>
        }
    </dd>
</dl>
<p>
    @if (User.IsInRole("OrganizationAdmin") || User.IsInRole("GroupAdmin") || User.IsInRole("SalesOrgAdmin"))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>

@if (User.IsInRole("OrganizationAdmin") || User.IsInRole("GroupAdmin") || User.IsInRole("SalesOrgAdmin"))
{
    <div class="card mt-3">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="bi bi-image"></i> Upload Logo</h5>
        </div>
        <div class="card-body">
            <form asp-action="UploadLogo" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="source" value="Details" />
                <div class="mb-2">
                    <input type="file" name="logo" accept=".png,.jpg,.jpeg,.svg" class="form-control" />
                    <small class="text-muted">PNG, JPG, JPEG, or SVG. Replaces current logo.</small>
                </div>
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-upload"></i> Upload Logo
                </button>
            </form>
        </div>
    </div>
}
