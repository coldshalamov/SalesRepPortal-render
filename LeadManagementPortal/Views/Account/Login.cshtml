@model LeadManagementPortal.Controllers.LoginViewModel
@{
    Layout = null;
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Lead management portal</title>
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <style>
        :root {
            --page-base: #040b17;
            --page-mid: #0b162b;
            --page-top: #15223a;
            --text-main: #f1f6ff;
            --text-muted: rgba(226, 238, 255, 0.82);
            --card-bg: rgba(10, 20, 37, 0.62);
            --card-border: rgba(169, 194, 225, 0.24);
            --field-bg: rgba(255, 255, 255, 0.08);
            --field-border: rgba(178, 205, 237, 0.3);
            --field-focus: rgba(182, 212, 247, 0.52);
            --accent: #7dafff;
        }

        body, html {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background: radial-gradient(125% 95% at 102% -6%, var(--page-top) 0%, var(--page-mid) 34%, var(--page-base) 72%, #02050d 100%);
        }

        .login-bg {
            position: fixed;
            inset: 0;
            pointer-events: none;
            overflow: hidden;
            z-index: 0;
        }

        .corner-stripes {
            position: absolute;
            top: -22%;
            right: -10%;
            width: min(76vw, 920px);
            height: min(70vh, 560px);
            opacity: 0.62;
            filter: saturate(0.86) contrast(0.95);
            animation: stripeDrift 10s ease-in-out infinite;
        }

        .stripe {
            fill: none;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        .stripe-1 {
            stroke: url(#stripeWarm);
            stroke-width: 66;
            opacity: 0.38;
        }

        .stripe-2 {
            stroke: url(#stripeViolet);
            stroke-width: 54;
            opacity: 0.34;
        }

        .stripe-3 {
            stroke: url(#stripeSoftBlue);
            stroke-width: 36;
            opacity: 0.3;
        }

        .corner-glow {
            position: absolute;
            top: -12%;
            right: -6%;
            width: min(58vw, 760px);
            height: min(58vh, 520px);
            background:
                radial-gradient(58% 60% at 66% 38%, rgba(245, 162, 71, 0.22) 0%, rgba(245, 162, 71, 0.06) 46%, transparent 76%),
                radial-gradient(64% 66% at 54% 50%, rgba(151, 119, 255, 0.18) 0%, rgba(151, 119, 255, 0.05) 50%, transparent 80%);
            filter: blur(2px);
        }

        .subtle-grid {
            position: absolute;
            inset: 0;
            background-image:
                linear-gradient(to right, rgba(176, 204, 241, 0.05) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(176, 204, 241, 0.04) 1px, transparent 1px);
            background-size: 160px 160px;
            opacity: 0.1;
            mask-image: radial-gradient(80% 70% at 35% 50%, black 35%, transparent 100%);
        }

        .top-right-line {
            position: absolute;
            top: 90px;
            right: 110px;
            width: min(16vw, 220px);
            height: 1px;
            background: linear-gradient(90deg, rgba(168, 204, 244, 0) 0%, rgba(190, 218, 250, 0.72) 52%, rgba(168, 204, 244, 0) 100%);
            opacity: 0.48;
        }

        @@keyframes stripeDrift {
            0%, 100% {
                transform: translate3d(0, 0, 0) scale(1);
            }

            50% {
                transform: translate3d(-8px, 6px, 0) scale(1.015);
            }
        }

        .login-wrapper {
            position: relative;
            z-index: 1;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .login-card {
            background: var(--card-bg);
            backdrop-filter: blur(22px);
            -webkit-backdrop-filter: blur(22px);
            border: 1px solid var(--card-border);
            border-radius: 24px;
            box-shadow: 0 34px 70px rgba(1, 6, 15, 0.55), inset 0 0 0 1px rgba(255, 255, 255, 0.07);
            padding: 48px;
            width: 100%;
            max-width: 440px;
            color: var(--text-main);
            animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
            opacity: 0;
            transform: translateY(20px);
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .login-title {
            font-size: 1.85rem;
            font-weight: 700;
            letter-spacing: -0.03em;
            margin-bottom: 8px;
            color: var(--text-main);
            text-shadow: 0 8px 30px rgba(10, 21, 42, 0.45);
        }

        .login-subtitle {
            font-size: 1rem;
            color: var(--text-muted);
            font-weight: 400;
        }

        .form-label {
            font-weight: 500;
            font-size: 0.95rem;
            margin-bottom: 8px;
            color: rgba(235, 244, 255, 0.95);
        }

        .input-group {
            margin-bottom: 24px;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 14px rgba(3, 10, 23, 0.22);
            background: var(--field-bg);
            border: 1px solid var(--field-border);
            transition: all 0.3s ease;
        }

        .input-group:focus-within {
            background: rgba(255, 255, 255, 0.14);
            border-color: var(--field-focus);
            box-shadow: 0 10px 24px rgba(7, 20, 39, 0.36);
        }

        .input-group-text {
            background: transparent;
            border: none;
            color: rgba(218, 233, 252, 0.9);
            padding-left: 16px;
        }

        .form-control {
            background: transparent;
            border: none;
            color: var(--text-main);
            padding: 14px 16px;
            font-size: 1rem;
        }

        .form-control::placeholder {
            color: rgba(214, 229, 249, 0.62);
        }

        .form-control:focus {
            background: transparent;
            color: var(--text-main);
            box-shadow: none;
        }

        .form-check-input {
            background-color: rgba(255, 255, 255, 0.12);
            border-color: rgba(186, 211, 241, 0.5);
            cursor: pointer;
        }

        .form-check-input:checked {
            background-color: var(--accent);
            border-color: var(--accent);
        }

        .form-check-label {
            color: rgba(222, 235, 253, 0.9);
            font-size: 0.95rem;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(180deg, rgba(145, 182, 247, 0.3) 0%, rgba(123, 166, 238, 0.32) 100%);
            border: 1px solid rgba(185, 213, 250, 0.56);
            color: var(--text-main);
            font-weight: 600;
            padding: 14px;
            border-radius: 12px;
            font-size: 1.05rem;
            transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
            margin-top: 10px;
        }

        .btn-primary:hover, .btn-primary:focus {
            background: linear-gradient(180deg, rgba(167, 199, 255, 0.42) 0%, rgba(138, 182, 255, 0.45) 100%);
            border-color: rgba(202, 224, 255, 0.72);
            transform: translateY(-2px);
            box-shadow: 0 12px 24px rgba(8, 19, 37, 0.36);
            color: var(--text-main);
        }

        .btn-primary:active {
            transform: translateY(1px);
        }

        .validation-errors {
            font-size: 0.9rem;
            color: #ffe8e8;
            background: rgba(212, 64, 64, 0.18);
            padding: 12px;
            border-radius: 8px;
            border: 1px solid rgba(255, 124, 124, 0.4);
            margin-bottom: 20px;
            display: none;
        }

        @media (max-width: 768px) {
            .corner-stripes {
                top: -12%;
                right: -32%;
                width: 132vw;
                height: 50vh;
                opacity: 0.45;
            }

            .top-right-line {
                top: 66px;
                right: 30px;
                width: 32vw;
            }

            .login-card {
                padding: 34px 28px;
                border-radius: 18px;
            }
        }
    </style>
</head>
<body>
    <div class="login-bg" aria-hidden="true">
        <div class="subtle-grid"></div>
        <div class="top-right-line"></div>
        <div class="corner-glow"></div>
        <svg class="corner-stripes" viewBox="0 0 720 520" preserveAspectRatio="xMaxYMin slice" role="presentation">
            <defs>
                <linearGradient id="stripeWarm" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" stop-color="rgba(255, 255, 255, 0.15)" />
                    <stop offset="46%" stop-color="rgba(252, 189, 95, 0.9)" />
                    <stop offset="100%" stop-color="rgba(246, 135, 76, 0.85)" />
                </linearGradient>
                <linearGradient id="stripeViolet" x1="6%" y1="8%" x2="100%" y2="92%">
                    <stop offset="0%" stop-color="rgba(208, 222, 255, 0.4)" />
                    <stop offset="52%" stop-color="rgba(190, 125, 255, 0.9)" />
                    <stop offset="100%" stop-color="rgba(129, 104, 246, 0.78)" />
                </linearGradient>
                <linearGradient id="stripeSoftBlue" x1="0%" y1="0%" x2="92%" y2="90%">
                    <stop offset="0%" stop-color="rgba(223, 236, 255, 0.5)" />
                    <stop offset="56%" stop-color="rgba(143, 189, 255, 0.72)" />
                    <stop offset="100%" stop-color="rgba(140, 156, 255, 0.38)" />
                </linearGradient>
            </defs>
            <path class="stripe stripe-1" d="M 256 -90 C 390 72 470 204 740 510" />
            <path class="stripe stripe-2" d="M 334 -118 C 436 56 518 188 786 496" />
            <path class="stripe stripe-3" d="M 196 -58 C 318 90 380 198 632 478" />
        </svg>
    </div>

    <div class="login-wrapper">
        <div class="login-card">
            <div class="login-header">
                <div class="login-title">Welcome Back</div>
                <div class="login-subtitle">Lead Management Portal</div>
            </div>

            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div asp-validation-summary="All" class="text-white validation-errors"></div>

                <div>
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="name@company.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger" style="font-size:0.85rem;"></span>
                </div>

                <div class="mt-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger" style="font-size:0.85rem;"></span>
                </div>

                <div class="mb-3 mt-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">Remember me for 30 days</label>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">
                        Sign In <i class="bi bi-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var validationSummary = document.querySelector('.validation-errors');
            if (validationSummary && validationSummary.innerHTML.trim() !== '' && !validationSummary.querySelector('ul:empty')) {
                validationSummary.style.display = 'block';
            }
        });
    </script>
</body>
</html>
