@using Microsoft.EntityFrameworkCore
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@inject LeadManagementPortal.Data.ApplicationDbContext AppDbContext
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DiRx</title>
    <link rel="icon" type="image/x-icon" href="~/img/favicon.ico" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/multiselect.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Dashboard")">
                   @{
                        // Fetch user with explicit include for SalesOrg and SalesGroup
                        ApplicationUser? user = null;
                        var claimsPrincipal = User;
                        if (claimsPrincipal.Identity?.IsAuthenticated == true)
                        {
                            var userId = UserManager.GetUserId(claimsPrincipal);
                            if (!string.IsNullOrEmpty(userId))
                            {
                                // We cannot use await directly inside a razor code block efficiently if it spans multiple lines without a function, 
                                // but we can query directly if context is injected.
                                // Note: This is synchronous-like access in a view, which is not ideal but solves the navigation property issue. 
                                // Better performance would be a ViewComponent.
                                user = AppDbContext.Users
                                    .Include(u => u.SalesOrg)
                                    .Include(u => u.SalesGroup)
                                    .FirstOrDefault(u => u.Id == userId);
                            }
                        }
                        var orgLogo = user?.SalesOrg?.LogoUrl;
                        var groupLogo = user?.SalesGroup?.LogoUrl;
                        var customLogo = !string.IsNullOrWhiteSpace(orgLogo) ? orgLogo : groupLogo;
                    }
                    @if (!string.IsNullOrWhiteSpace(customLogo))
                    {
                        <img src="@customLogo" alt="Logo" style="height:32px;" class="me-2" />
                    }
                    else
                    {
                        <img src="~/img/DiRxLogoWhite.svg" alt="Default" style="height:32px;" class="me-2" />
                    }
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        var navController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                        var navAction = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link @(navController == "Dashboard" ? "active" : "")" asp-controller="Dashboard" asp-action="Index"
                                   data-bs-toggle="tooltip" data-bs-placement="bottom" title="View your dashboard and daily stats">
                                    <i class="bi bi-speedometer2 me-1 nav-icon" aria-hidden="true"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(navController == "Leads" ? "active" : "")" asp-controller="Leads" asp-action="Index"
                                   data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage active leads and prospects">
                                    <i class="bi bi-person-lines-fill me-1 nav-icon" aria-hidden="true"></i>Leads
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(navController == "Customers" ? "active" : "")" asp-controller="Customers" asp-action="Index"
                                   data-bs-toggle="tooltip" data-bs-placement="bottom" title="View customers and converted leads">
                                    <i class="bi bi-building me-1 nav-icon" aria-hidden="true"></i>Customers
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(navController == "Commissions" ? "active" : "")" asp-controller="Commissions" asp-action="Index"
                                   data-bs-toggle="tooltip" data-bs-placement="bottom" title="Track commissions and payouts">
                                    <i class="bi bi-cash-coin me-1 nav-icon" aria-hidden="true"></i>Commissions <span class="badge bg-warning text-dark ms-1">New</span>
                                </a>
                            </li>
                            @if (User.IsInRole("OrganizationAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "SalesGroups" ? "active" : "")" asp-controller="SalesGroups" asp-action="Index"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage sales groups">
                                        <i class="bi bi-diagram-3 me-1 nav-icon" aria-hidden="true"></i>Sales Groups
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "SalesOrgs" ? "active" : "")" asp-controller="SalesOrgs" asp-action="Index"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage sales organizations">
                                        <i class="bi bi-people me-1 nav-icon" aria-hidden="true"></i>Sales Orgs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "Users" ? "active" : "")" asp-controller="Users" asp-action="Index"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage users and access">
                                        <i class="bi bi-person-gear me-1 nav-icon" aria-hidden="true"></i>Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "Settings" ? "active" : "")" asp-controller="Settings" asp-action="Index"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Configure portal settings">
                                        <i class="bi bi-sliders me-1 nav-icon" aria-hidden="true"></i>Settings
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("GroupAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "SalesGroups" ? "active" : "")" asp-controller="SalesGroups" asp-action="MyGroup"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="View your sales group">
                                        <i class="bi bi-diagram-3 me-1 nav-icon" aria-hidden="true"></i>My Group
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "SalesOrgs" ? "active" : "")" asp-controller="SalesOrgs" asp-action="Index"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="View sales orgs in your group">
                                        <i class="bi bi-people me-1 nav-icon" aria-hidden="true"></i>Sales Orgs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "Users" ? "active" : "")" asp-controller="Users" asp-action="MyGroup"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage users in your group">
                                        <i class="bi bi-person-gear me-1 nav-icon" aria-hidden="true"></i>My Group Users
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("SalesOrgAdmin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "Users" ? "active" : "")" asp-controller="Users" asp-action="MyOrg"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="Manage users in your org">
                                        <i class="bi bi-person-gear me-1 nav-icon" aria-hidden="true"></i>My Org Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(navController == "SalesOrgs" ? "active" : "")" asp-controller="SalesOrgs" asp-action="MyOrgDetails"
                                       data-bs-toggle="tooltip" data-bs-placement="bottom" title="View your sales org details">
                                        <i class="bi bi-people me-1 nav-icon" aria-hidden="true"></i>My Org
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- Command center search -->
                        <div id="navbarSearch" class="px-sm-3 my-2 my-sm-0">
                            <div class="position-relative">
                                <i class="bi bi-search navbar-search-icon" aria-hidden="true"></i>
                                <span id="navbarSearchStatus" class="navbar-search-status"></span>
                                <input id="navbarSearchInput" type="search" class="form-control navbar-search-input"
                                       placeholder="Search leads & customersâ€¦"
                                       autocomplete="off"
                                       aria-label="Global search" />
                                <div id="navbarSearchMenu" class="dropdown-menu" aria-hidden="true"></div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <!-- Notification Bell -->
                            <div id="notifBellContainer">
                                <button id="notifBellBtn" type="button" aria-label="Notifications">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                                        <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                                    </svg>
                                    <span id="notifBadge"></span>
                                </button>
                                <div id="notifDropdown">
                                    <div class="notif-header">
                                        <span class="notif-header-title">Notifications</span>
                                        <button class="notif-header-mark-all" type="button"
                                                onclick="DiRxNotifications.markAllRead()">
                                            Mark all read
                                        </button>
                                    </div>
                                    <div id="notifList">
                                        <div class="notif-empty">Loading&hellip;</div>
                                    </div>
                                </div>
                            </div>

                            <a class="btn btn-sm btn-outline-light ms-2"
                               asp-controller="Leads" asp-action="Create"
                               data-bs-toggle="tooltip" data-bs-placement="bottom" title="Create a new lead">
                                <i class="bi bi-plus-lg me-1" aria-hidden="true"></i>New Lead
                            </a>

                            <ul class="navbar-nav ms-2">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @((await UserManager.GetUserAsync(User)) is ApplicationUser u ? (string.IsNullOrWhiteSpace(u.FullName) ? User.Identity.Name : u.FullName) : User.Identity.Name)
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="bi bi-key"></i> Change Password
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - DiRx
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/multiselect.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/js/notifications.js" asp-append-version="true"></script>
        <script src="~/js/navbar-search.js" asp-append-version="true"></script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
